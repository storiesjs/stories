{
  "name": "@stories/main",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "lib/*",
      "demo/*"
    ],
    "nohoist": [
      "**/webpack",
      "**/vue",
      "**/vue**",
      "**/vue/**",
      "**/@vue",
      "**/@vue**",
      "**/@vue/**"
    ]
  },
  "description": "",
  "scripts": {
    "rm_nm": "find . -name node_modules -type d -exec rm -rf {} +",
    "lint": "eslint '**/*.ts?(x)' --fix",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,md,mdx}'",
    "build": "yarn workspace @stories/stories-common run build && yarn workspace @stories/stories-ui run build && yarn workspace @stories/stories-react run build && yarn workspace @stories/stories-angular run build && yarn workspace @stories/stories-vue2 run build && yarn workspace @stories/stories-vue3 run build",
    "clean": "yarn workspaces run clean",
    "demo:angular": "yarn workspace demo-angular start",
    "demo:react": "yarn workspace demo-react stories",
    "demo:vue2": "yarn workspace demo-vue2 stories",
    "demo:vue3": "yarn workspace demo-vue3 stories"
  },
  "repository": "git@github.com:storiesjs/storiesjs.git",
  "author": "akserg <akserg@gmail.com>",
  "license": "GPL-2.0",
  "main": "index.js",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@babel/eslint-parser": "^7.16.3",
    "esbuild": "^0.12.21",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-vue": "^6.2.2",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^2.6.1",
    "typescript": "~4.2.3"
  },
  "resolutions": {
    "babel-loader": "8.1.0",
    "jest": "26.6.0"
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.0.0",
    "yarn": ">=1.22.4 <2",
    "npm": "     PLEASE USE YARN     "
  }
}
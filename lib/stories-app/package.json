{
  "name": "@stories/app",
  "version": "0.1.0",
  "description": "",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "scripts": {
    "build": "microbundle build",
    "dev": "microbundle watch",

    "dev2": "tsc watch --template src/template.html",
    "build:widget": "microbundle build",
    "build:lib": "microbundle build -i src/component.tsx",
    "lint": "eslint '{src,tests}/**/*.{ts,tsx}'",
    "test": "jest",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds --open demo/ --node-resolve  --watch\""
  },
  "files": [
    "dist"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "author": "akserg <akserg@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "lit": "2.0.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "@web/dev-server": "^0.1.28",
    "concurrently": "^5.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.3",
    "eslint": "^7.13.0",
    "eslint-config-preact": "^1.1.3",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "microbundle": "^0.13.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}

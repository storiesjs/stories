{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "strict": true,
    "sourceMap": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"],
    "jsx": "react",
    "outDir": "dist/types"
  },
  "include": ["src"],
  "exclude": ["src/**/*.stories.tsx"]
}
